<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/header.ejs') %>
            <%- include('./partials/mobile-header.ejs') %>
                <main>
                    <div class="container">
                        <div class="notes-container" id="details">
                            <div class="note">
                                <h1>
                                    <%= note.title %>
                                </h1>
                                <p>
                                    <%= note.body %>
                                </p>
                                <div class="actions">
                                    <a id="edit" title="Edit" href="/edit/<%= note.id %>">Edit</a>
                                    <a id="delete" title="Delete" href="/<%= note.id %>"
                                        onclick="return confirm('Are your sure you want to delete this note?')">Delete</a>
                                </div>
                            </div>
                            </a>
                        </div>
                    </div>
                </main>
                <%- include('./partials/footer.ejs') %>
    </body>

</html>