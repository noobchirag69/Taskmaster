<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %>

    <body>
        <%- include('./partials/header.ejs') %>
            <main>
                <div class="container">
                    <div class="notes-container" id="details">
                        <div class="note">
                            <h2><%= note.title %></h2>
                            <p><%= note.body %></p>
                            <div class="actions">
                                <a title="Edit" href="/edit/<%= note.id %>">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a title="Delete" href="/<%= note.id %>"
                                    onclick="return confirm('Are your sure you want to delete this note?')">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </div>
                        </div>
                        </a>
                    </div>
                </div>
            </main>
        <%- include('./partials/footer.ejs') %>
    </body>

</html>